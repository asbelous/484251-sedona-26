body {
  margin: 0;
  padding: 0;

  font-family: "PT Sans", Arial, sans-serif;
  font-size: 14px;
  line-height: 26px;
  font-weight: 700;
  color: #000000;
  text-transform: uppercase;

  background-color: #ffffff;
}

a {
  text-decoration: none;
}

.main-navigation {
  font-size: 14px;
  color: #000000;

  background-color: #ffffff;
}

.cite-navigation {
  list-style: none;
}

.cite-navigation a {
  color: #000000;
}

.cite-navigation a:hover {
  color: #81b3d2;
}

.cite-navigation a:active {
  opacity: 0.3;
}

.introduce {
  text-align: center;
}

.introduce h2 {
  font-size: 21px;
}

.introduce p {
  font-weight: 400;
  color: #333333;
}

.interesting {
  text-align: center;
}

.interesting h2 {
  font-size: 30px;
}

.interesting p {
  font-weight: 400;
  color: #333333;
}

.catalog-list {
  list-style: none;
}

.catalog-item-name a{
  font-size: 21px;
  color: #000000;
}

.catalog-item-name a:hover {
  color: #81b3d2;
}

.catalog-item-name a:active {
  opacity: 0.3;
}

.catalog-item-kind,
.catalog-item-price {
  font-size: 14px;
  font-weight: 400;
  line-height: 21px;
  color: #333333;
}

table a {
  line-height: 21px;
  color: #ffffff;
  background-color: #81b3d2;
}

table a:hover {
  background-color: #669ec0;
}

table a:active {
  opacity: 0.3;
  background-color: #5496bd;
}

table button {
  font-weight: 700;
  text-transform: uppercase;
  line-height: 21px;
  color: #ffffff;
  background-color: #766357;
}

table button:hover {
  background-color: #604e43;
}

table button:active {
  opacity: 0.3;
  background-color: #503e33;
}

.raiting {
  font-weight: 400;
  line-height: 21px;
}

.search {
  text-align: center;
}

.search h2 a{
  font-size: 21px;
  color: #ffffff;

  background-color: #766357;
}

.search h2 a:hover {
  background-color: #604e43;
}

.search h2 a:active {
  opacity: 0.3;
  background-color: #503e33;
}

#arrival-date,
#date-of-departure {
  background-color: #f2f2f2;
  border: none;
}

#arrival-date:hover,
#date-of-departure:hover {
  background-color: #ebebeb;
}

#arrival-date:focus,
#date-of-departure:focus {
  background-color: #ffffff;
  border: 2px solid #e5e5e5;
}

.search .button {
  font-size: 21px;
  color: #ffffff;

  background-color: #81b3d2;
}

.search .button:hover {
  background-color: #669ec0;
}

.search .button:active {
  opacity: 0.3;

  background-color: #5496bd;
}

.visit {
  font-size: 21px;
}

.footer-social ul {
  list-style: none;
}

.social-button div {
  width: 46px;
  height: 48px;

  text-align: center;

  background-color: #81b3d2;
}

.social-button div:hover {
  background-color: #669ec0;
}

.social-button div:active {
  background-color: #5496bd;
}

.twitter img {
  margin-top: 17px;
}

.twitter img:active {
  opacity: 0.3;
}

.facebook img {
  margin-top: 13px;
}

.facebook img:active {
  opacity: 0.3;
}

.youtube img {
  margin-top: 16px;
}

.youtube img:active {
  opacity: 0.3;
}

.footer-copyright {
  font-weight: 400;
}

.footer-copyright img:hover {
  opacity: 0.7;
}

.footer-copyright img:active {
  opacity: 0.3;
}
